{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "cli": {
    "analytics": false
  },
  "projects": {
    "fed-inspirasom": {
      "projectType": "application",
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": "dist/fed-inspirasom",
            "index": "src/index.html",
            "browser": "src/main.ts",
            "polyfills": ["zone.js"],
            "tsConfig": "tsconfig.app.json",
            "assets": [
              "src/assets"
            ],
            "scripts": ["node_modules/phaser/dist/phaser.min.js"],
            "styles": [
              "node_modules/primeng/resources/primeng.min.css",
              "src/styles.scss",
              {
                "input": "primeng/resources/themes/bootstrap4-light-blue/theme.css",
                "bundleName": "light", 
                "inject": false
              },
              {
                "input": "primeng/resources/themes/bootstrap4-dark-blue/theme.css",
                "bundleName": "dark", 
                "inject": false
              }
            ]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "4mb",
                  "maximumError": "8mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "port": 1420
          },
          "configurations": {
            "production": {
              "buildTarget": "fed-inspirasom:build:production"
            },
            "development": {
              "buildTarget": "fed-inspirasom:build:development"
            }
          },
          "defaultConfiguration": "development"
        }
      },
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      }
    }
  }
}
